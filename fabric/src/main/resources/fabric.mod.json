{
  "schemaVersion": 1,
  "id": "horsebuff",
  "version": "${version}",

  "accessWidener" : "horsebuff.accesswidener",

  "name": "Horse Buff",
  "description": "Improve horses by removing stupid stuff and adding useful stuff.",
  "authors": ["CodeF53#0241"],
  "contact": {
    "homepage": "https://modrinth.com/mod/horsebuff",
    "sources": "https://github.com/CodeF53/Horse-Buff",
    "issues": "https://github.com/CodeF53/Horse-Buff/issues"
  },

  "license": "CC BY-NC-SA",
  "icon": "assets/horsebuff/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.F53.HorseBuff.HorseBuffInit"
    ],
    "modmenu": [
      "net.F53.HorseBuff.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "horsebuff.mixins.json",
    "horsebuff.fabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "minecraft": "${compatible_minecraft_versions}",
    "java": ">=${java_version}"
  }
}
